<!DOCTYPE html>

<head>
    <%- include('../partials/head.ejs'); %>
</head>

<body>
    <header>
        <%- include('../partials/navbar1.ejs'); %>
    </header>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 offset-md-2">

                <h1> Login</h1>

                <% if (message.length > 0) { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/api/login" method="post">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Login</button>
                </form>

                <p> Or :
                    <a href="/goo">
                        <button  class="btn btn-lg btn-danger" style="margin-top:10px;" >Login via Google </button>
                    </a> |
                    <a href="/fb">

                        <button class="btn btn-lg btn-info" style="margin-top:10px;" >Login via Facebook</button></a>
                  </p>

                  <hr>

                <p>Need an account? <a href="/register"><b>Sign Up</b></a></p>

            </div>

        </div>

    </div>

    <footer style="text-align: center;">
        <%- include('../partials/footer.ejs'); %>
    </footer>
</body>

</html>